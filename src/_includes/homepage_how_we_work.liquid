<!-- skill and practices panel -->
<section class="homepage__how-we-work how-we-work">
  <div class="how-we-work__inner">

    {%- capture title -%}{% t index-how_we_work.title %}{%- endcapture -%}
    {%- capture description -%}{% t index-how_we_work.subtitle %}{%- endcapture -%}
    {% include section_intro.html class="how-we-work__intro" description=description title=title %}

    <div class="how-we-work__details-container">
      {% assign translations = site.translations[site.lang].index-how_we_work %}
      {% for i in (0..5) %}
        <div class="how-we-work__detail">
          <img
            class="how-we-work__details-icon"
            src="{{ translations.image-paths[i] | prepend: site.baseurl }}"
          />
          <h3 class="how-we-work__details-text">{{ translations.titles[i] }}</h3>
        </div>
      {% endfor %}
    </div>
    <!-- end row -->
  </div>
  <!-- end container -->
</section>
<!-- end section -->
